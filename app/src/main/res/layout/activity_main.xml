<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/lblEingabe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bitte Namen eingeben"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
      />


    <EditText
        android:id="@+id/txtEingabe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"

    />

    <Button
        android:id="@+id/btnZurZweitenActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/btnZurZweitenActivity"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
      />

    <Button
        android:id="@+id/btnZurDrittenActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/btnZurDrittenActivity"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        />


</LinearLayout>
